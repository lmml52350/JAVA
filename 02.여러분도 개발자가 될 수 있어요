public class class03 {
    public static void main(String[] args) {
        System.out.println("(10분 전) 잠시후 결혼식 시작될 예장이오니 착석 부탁드립니다.");
        int size = 120; //실제 사이즈
        size = size + 10; //어린이는 10이상으로 구매
        System.out.println("신발 사이즈 " + size + "으로 보여주세요.");
        //변수이름 짓는 법
        //1.저장할 값에 어울리는 이름
        //2.밑줄 문자 숫자 사용가능, 공백은 사용불가, 숫자로 시작 불자
        //3.소문자로 시작, 각 단어의 시작 문자는 대문자로 시작
        //4.예약어 사용불가

        //입국 신고서
        String nationality = "대한민국";
        String firstName = "민";
        String lastName = "이";
        String dateOfBrith = "1992-03-05";
        String residentialAddress = "떙떙호텔";
        String purposeOfVisit = "관광";
        String _flightNo = "KE657";
        String _flight_No_2 = "KE657";
        int accompany = 2;
        int lengthOfStay = 5;
        String item1 = "시계" ;
        // 절대 변하지 않는 상수는 대문자로
        final String CODE = "KR"; //final 상수
        final String KR_COUNTRY_CODE = "+82";
        final double PI = 3.141592;
        //형 변환

        //int to float, double
        //int score = 93 + 93.8;  //정수와 실수 불가
        int score = 93;
        System.out.println(score);
        System.out.println((float)score);//93.0
        System.out.println((double) score);//93.0

        //float, double to int
        float score_f = 93.3F;
        double score_d = 98.8;
        System.out.println((int) score_f);//93
        System.out.println((int) score_d);//98
        score = 93 + (int) 98.8;
        System.out.println(score);

        score_d = (double)93 + 98.8;
        System.out.println(score_d);//191.8
        double convertedScoreDouble = score;
        System.out.println(convertedScoreDouble); //191 > 190.0
        //int > long > float > double (자동형변환)

        int convertedScoreInt = (int)(score_d);  //191.8 > 191
        //double > float > long > int (수동형전환)
        System.out.println(convertedScoreInt);

    }
}
